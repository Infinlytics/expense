// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())
  incomes   Income[]
  expenses  Expense[]
}

model Income {
  id          String   @id @default(cuid())
  amount      Float
  description String
  date        DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model Expense {
  id          String   @id @default(cuid())
  amount      Float
  description String
  date        DateTime
  category    String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
